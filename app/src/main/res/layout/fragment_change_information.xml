<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.ChangeInformationFragment"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:elevation="4dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingVertical="8dp"
        android:background="@color/colorPrimaryDark">

        <ImageView
            android:id="@+id/icon_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_arrow_back_24_white"/>

        <TextView
            android:id="@+id/tv_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Change Infomation"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edt_nameUD"
        android:drawableLeft="@drawable/ic_abc_24"
        android:hint="Enter your name"
        android:drawablePadding="10dp"
        android:textColor="@color/black"
        android:padding="10dp"
        android:textColorHint="#ccc"
        android:background="@drawable/bg_white_corner_8_gray_border"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edt_nunmberphoneUD"
        android:drawableLeft="@drawable/ic_abc_24"
        android:hint="Enter your numberphone"
        android:drawablePadding="10dp"
        android:textColor="@color/black"
        android:padding="10dp"
        android:textColorHint="#ccc"
        android:background="@drawable/bg_white_corner_8_gray_border"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_updateProfile"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_white_corner_8_gray_border"
        android:text="Update"
        />
</LinearLayout>