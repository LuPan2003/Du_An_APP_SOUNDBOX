<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.YoungmusicFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:background="@color/colorPrimaryDark"
        >
        <ImageView
            android:id="@+id/icon_back_nhactre"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_margin="10dp"
            android:tint="#ffffff"
            android:src="@drawable/ic_back_ios_24_black"
            tools:ignore="UseAppTint" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/banner_nhac_tre"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_play_all"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_main_shape_corner_6_border_white"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/define_dimen_5"
        android:layout_margin="5dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_play_all_white"
            tools:ignore="ContentDescription" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phát Tất cả"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_xsmall" />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_data"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/define_dimen_10"
        android:layout_marginBottom="60dp" />


</LinearLayout>